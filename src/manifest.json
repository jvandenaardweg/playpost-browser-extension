{
  "manifest_version": 2,
  "name": "Save to Playpost",
  "short_name": "Playpost",
  "author": "Playpost",
  "description": "With Playpost you can listen to articles, instead of reading them. This browser extension makes it super easy to save articles from your laptop or computer to your Playpost playlist in the iOS and Android app.",
  "homepage_url": "https://playpost.app",
  "version": "1.0.36",
  "browser_action": {
    "default_title": "Save to Playpost",
    "default_icon": "images/icon-16.png",
    "default_popup": "popup.html"
  },
  "incognito": "spanning",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "images/icon.svg",
    "48": "images/icon.svg",
    "128": "images/icon.svg"
  },
  "permissions": [
    "storage",
    "activeTab",
    "https://api.playpost.app/*"
  ]
}
